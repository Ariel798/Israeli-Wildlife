@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model WildlifeProject.Model.AdminUser

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Styles//bootstrap.css" rel="stylesheet" />
    <script src="~/scripts/jquery.js"></script>
    <title>Index</title>
</head>
<body>
    <div class="container">
        <h2>Login Page</h2>
        <form asp-action="SignIn" asp-controller="Admin">
            <div class="form-group">
                <label for="email">Email:</label>
                <input asp-for="UserName" type="text" class="form-control" id="email" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="pwd">Password:(ArielJoseph111)</label>
                <input asp-for="Password" type="password" class="form-control" id="pwd" placeholder="Enter password">
            </div>
            <button type="submit" class="btn btn-default">Sign In</button>
            <div class="form-group">
                <label>@ViewBag.Messege</label>
            </div>
        </form>
    </div>
</body>
</html>

