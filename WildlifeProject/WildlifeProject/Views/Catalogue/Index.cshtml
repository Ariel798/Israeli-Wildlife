@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model WildlifeProject.Model.Animal

@{
    ViewData["Title"] = "Index";
}

<h1>Catalogue</h1>

<form asp-controller="Catalogue" asp-action="Index">
    <select name="catagorySelect" class="form-control"  id="catagorySelect" asp-for="@Model.CategoryId">
        <option value="1">Mammals</option>
        <option value="2">Bird</option>
        <option value="3">Reptiles</option>
        <option value="4">Amphibian</option>
    </select>
    <input class="p-1 m-lg-2 btn btn-sm btn-info" type="submit" value="Search" />
</form>

<table class="table table-dark" border="1" width="39%">
    @foreach (var item in @ViewBag.ListOfAnimals)
    {
        <div class="card" style="width: 18rem; display: inline-block; margin: 2rem">
            @if (@item.Image != null)
            {
                <img height="150" src="data:image;base64,@System.Convert.ToBase64String(@item.Image)" class="img-thumbnail" alt="Cinque Terre">
            }

            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-title"></h6>
                <p class="card-text">@item.ConservationStatus</p>
                <a href="@Url.Action("Index", "AnimalDescription",new {animalId = @item.AnimalId})" class="btn btn-primary">Details</a>
            </div>
        </div>

    }
</table>


